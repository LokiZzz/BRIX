@using BRIX.Lexica
@using BRIX.Library.Effects

The character @GetMove(Model.MovingType) @Numbers.ENGDcln(Model.DistancePerActionPoint, "meter") for each action point.

@code {
    [Parameter]
    public MoveCharacterEffect Model { get; set; } = new();

    public static MarkupString GetMove(ECharacterMovingType input)
    {
        string resultString = input switch
        {
            ECharacterMovingType.Walk => "moves",
            ECharacterMovingType.Fly => "flies",
            ECharacterMovingType.Swim => "swims",
            ECharacterMovingType.Burrow => "burrows",
            ECharacterMovingType.Climb => "climbs",
            ECharacterMovingType.Teleportation => "teleports",
            _ => TemplateHelper.LexisTemplatingError
        };

        return (MarkupString)resultString;
    }
}