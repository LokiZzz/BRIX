@using BRIX.Lexica
@using BRIX.Library.Aspects
@using BRIX.Library.Effects

@if(@Model.GetAspect<DurationAspect>().Duration == 0)
{
    <Text>Deals @Numbers.ENGDcln(Model.Impact, "point") of damage.</Text>
}
else
{
    <Text>Deals @Numbers.ENGDcln(Model.Impact, "point") damage at the end of the @((MarkupString)"target's") turn during @Numbers.ENGDcln(Model.GetAspect<DurationAspect>()?.Duration ?? 0, "round").</Text>
}

@code {
    [Parameter]
    public DamageEffect Model { get; set; } = new();
}
