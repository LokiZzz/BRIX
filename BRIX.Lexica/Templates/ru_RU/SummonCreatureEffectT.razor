@using BRIX.Lexica
@using BRIX.Library.Characters
@using BRIX.Library.Effects

Призывает на поле боя @GetCreatureEnumeration().

@code {
    [Parameter]
    public SummonCreatureEffect Model { get; set; } = new();

    public MarkupString GetCreatureEnumeration()
    {
        string enumeration = string.Empty;

        foreach(CreaturesGroup item in Model.Creatures)
        {
            if (!string.IsNullOrEmpty(enumeration))
            {
                enumeration += "; ";
            }

            if(item.Count > 1)
            {
                enumeration += $"{item.Count}x ";
            }

            enumeration += item.Creature.Name;
        }

        return (MarkupString)enumeration;
    }
}
