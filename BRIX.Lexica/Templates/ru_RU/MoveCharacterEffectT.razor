@using BRIX.Lexica
@using BRIX.Library.Effects

Персонаж @GetMove(Model.MovingType) @Numbers.RUSDcln(Model.DistancePerActionPoint, "метр", "метра", "метров") за каждое потраченное очко действия.

@code {
    [Parameter]
    public MoveCharacterEffect Model { get; set; } = new();

    public static MarkupString GetMove(ECharacterMovingType input)
    {
        string resultString = input switch
        {
            ECharacterMovingType.Walk => "проходит",
            ECharacterMovingType.Fly => "пролетает",
            ECharacterMovingType.Swim => "проплывает",
            ECharacterMovingType.Burrow => "перемещается сквозь материю",
            ECharacterMovingType.Climb => "карабкается",
            ECharacterMovingType.Teleportation => "телепортируется",
            _ => TemplateHelper.LexisTemplatingError
        };

        return (MarkupString)resultString;
    }
}