@page "/"

@inject HttpClient Http

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<button onclick="@(async () => await TestWebApi())">Test web api!</button>

<p>@_responseString</p>

Welcome to your new app.

@code
{
    private string _responseString = string.Empty;

    private async Task TestWebApi()
    {
        try
        {
            HttpResponseMessage response = await Http.GetAsync("api/Account/GetHello");
            _responseString = await response.Content.ReadAsStringAsync();
        }
        catch(Exception ex)
        {
            _responseString = ex.Message;
        }
    }
}