@* Контейнер с закреплённым снизу футером, который будет всегда на виду. *@

<div class="footer-box-container">
    <div class="footer-box-body-content">
        @if (Content is not null)
        {
            @Content
        }
    </div>
    <footer class="box footer-box-footer-content">
        @if (Footer is not null)
        {
            @Footer
        }
    </footer>
</div>

@code {
    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }
}