@using BRIX.Web.Client.Components.Account
@using BRIX.Web.Client.Components.Pages
@using BRIX.Web.Client.Components.Shared

@inherits LayoutComponentBase

<div>
    <ErrorBoundary @ref="_errorBoundary">
        <ChildContent>
            <NavMenu />
            <main class="container">
                @Body
            </main>
        </ChildContent>
        <ErrorContent Context="exception">
            <ErrorPage Exception="exception" ErrorBoundary="_errorBoundary"/>
        </ErrorContent>
    </ErrorBoundary>
</div>

@code
{
    private ErrorBoundary? _errorBoundary;
}