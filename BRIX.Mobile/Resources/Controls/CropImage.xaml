<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:local="clr-namespace:BRIX.Mobile.Resources.Controls"
      x:Class="BRIX.Mobile.Resources.Controls.CropImage">

    <Image x:Name="img" Source="{Binding Source={x:Reference this}, Path=Source}"/>
    <local:ZoomContainer Image="{x:Reference img}">
        <Rectangle 
            BackgroundColor="Black"
            Opacity="0.8"
            WidthRequest="50"
            HeightRequest="50"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </local:ZoomContainer>
</Grid>