<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:local="clr-namespace:BRIX.Mobile.Resources.Controls"
      x:Class="BRIX.Mobile.Resources.Controls.CropImage"
      x:Name="this">

    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    
    <Image x:Name="Image" 
           Source="{Binding Source={x:Reference this}, Path=Source}" 
           Aspect="AspectFill"
           Opacity="0.15"/>

    <local:ZoomContainer Area="{x:Reference Image}" 
                         Content="{Binding Source={x:Reference this}, Path=Zoom}"
                         ZoomUpdated="OnZoomUpdated"/>

    <Image Source="{Binding Source={x:Reference this}, Path=Source}" 
           Aspect="AspectFill"
           Clip="{Binding Source={x:Reference this}, Path=Selection}">
    </Image>
</Grid>