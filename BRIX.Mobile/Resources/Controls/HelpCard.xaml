<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lcz="clr-namespace:BRIX.Mobile.Resources.Localizations"
             x:Class="BRIX.Mobile.Resources.Controls.HelpCard"
             x:Name="this">
    <Border Style="{StaticResource BlockBorder}">
        <VerticalStackLayout>
            <Label 
                Style="{StaticResource ParagraphTitleLabel}" 
                Text="{lcz:Translate Name={x:Static lcz:LocalizationKeys.Help}}"/>
            <Label x:Name="lblHelpText"/>
            <Button Style="{StaticResource HideHintButton}" Pressed="Button_Pressed"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
