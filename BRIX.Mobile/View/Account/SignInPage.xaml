<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BRIX.Mobile.ViewModel.Account"
             x:Class="BRIX.Mobile.View.Account.SignInPage"
             ControlTemplate="{StaticResource BusyPageTemplate}"
             xmlns:localization="clr-namespace:BRIX.Mobile.Resources.Localizations"
             Title="{localization:Translate SignInPageTitle}"
             x:DataType="local:SignInPageVM">
    <VerticalStackLayout>
        <Label Text="{localization:Translate Login}"/>
        <Entry Text="{Binding Login}"/>
        <Label Text="{localization:Translate Password}"/>
        <Entry Text="{Binding Password}" IsPassword="True"/>
        <Label Text="{localization:Translate RememberMe}"/>
        <Switch IsToggled="{Binding RememberMe}"/>
        <Button Text="{localization:Translate Name={x:Reference local}}" Command="{Binding SignInCommand}"/>
    </VerticalStackLayout>
</ContentPage>