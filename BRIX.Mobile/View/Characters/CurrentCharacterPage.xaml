            <Setter Property="Opacity" Value=".75"/>
        </Style>
        <Style TargetType="Button" x:Key="CardActionButton">
            <Setter Property="FontFamily" Value="Awesome"/>
            <Setter Property="Text" Value="{x:Static icons:Awesome.Calculator}"/>
