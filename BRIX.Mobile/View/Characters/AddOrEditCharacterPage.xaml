<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRIX.Mobile.View.Characters.AddOrEditCharacterPage"
             xmlns:lcz="clr-namespace:BRIX.Mobile.Resources.Localizations"
             xmlns:controls="clr-namespace:BRIX.Mobile.Resources.Controls"
             Title="{lcz:Translate Name={x:Static lcz:LocalizationKeys.AddOrEditCharacterPageTitle}}">

    <Shell.TitleView>
        <controls:TitleView/>
    </Shell.TitleView>

    <VerticalStackLayout>
        <StackLayout>
            <Label Text="{lcz:Translate Name={x:Static lcz:LocalizationKeys.Name}}"/>
            <Entry Text="{Binding Character.Name}"/>
            <Label Text="{lcz:Translate Name={x:Static lcz:LocalizationKeys.Backstory}}"/>
            <Entry Text="{Binding Character.Backstory}"/>
            <Label Text="{lcz:Translate Name={x:Static lcz:LocalizationKeys.Appearance}}"/>
            <Entry Text="{Binding Character.Appearance}"/>

            <Button Text="{lcz:Translate Name={x:Static lcz:LocalizationKeys.Save}}" 
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding Character}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>