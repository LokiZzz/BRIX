<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRIX.Mobile.View.Settings.SettingsPage"
             xmlns:localization="clr-namespace:BRIX.Mobile.Resources.Localizations"
             xmlns:local="clr-namespace:BRIX.Mobile.View.Settings"
             Title="{localization:Translate SettingsPageTitle}">
    <VerticalStackLayout>
        <Button Text="{localization:Translate Language}"
                Command="{Binding SelectLanguageCommand}"/>
    </VerticalStackLayout>
</ContentPage>