<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BRIX.Mobile.ViewModel.Abilities.Aspects"
             x:Class="BRIX.Mobile.View.Abilities.Aspects.AspectsPanelView"
             x:DataType="vm:AspectPanelViewModel">

    <ContentView.Resources>
        <Style TargetType="Label" x:Key="AspectIcon">
            <Setter Property="FontFamily" Value="AwesomeRPG"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="TextColor" Value="{StaticResource BRIXWhite}"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
    </ContentView.Resources>
    
    <Border Style="{StaticResource BlockBorder}">
        <VerticalStackLayout Spacing="10">
            <Label Style="{StaticResource TitleLabel}" Text="Аспекты"/>
            <CollectionView 
                ItemsSource="{Binding AspectsCollection}" 
                SelectedItem="{Binding SelectedAspect}" 
                SelectionMode="Single"
                BackgroundColor="Yellow">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="7"  VerticalItemSpacing="10" HorizontalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AspectUtilityModel">
                        <Border 
                            StrokeShape="RoundRectangle 5"
                            HeightRequest="{Binding Source={RelativeSource Self}, Path=Width}"
                            BackgroundColor="{StaticResource BRIXDim}"
                            Margin="1">
                            <Label 
                                Style="{StaticResource AspectIcon}" 
                                Text="{Binding Icon}"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="{StaticResource BRIXDim}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="{StaticResource BRIXOrange}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label 
                Style="{StaticResource AspectIcon}" 
                FontSize="120"
                Text="{Binding SelectedAspect.Icon}"/>
        </VerticalStackLayout>
    </Border>
</ContentView>
